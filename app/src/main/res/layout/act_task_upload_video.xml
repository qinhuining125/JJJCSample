<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <com.pili.pldroid.player.widget.PLVideoTextureView
        android:id="@+id/plvVideo"
        android:layout_margin="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>


    <ImageView
        android:id="@+id/upload_video_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        >
    </ImageView>

    <ImageView
        android:id="@+id/video_view_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:padding="5dp"
        android:layout_alignRight="@+id/upload_video_view"
        android:src="@drawable/icon_close"
        />


    <ImageView
        android:id="@+id/video_view_start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignLeft="@id/upload_video_view"
        android:layout_alignRight="@id/upload_video_view"
        android:padding="5dp"
        android:src="@drawable/icon_start"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/video_view_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignLeft="@id/upload_video_view"
        android:layout_alignRight="@id/upload_video_view"
        android:padding="5dp"
        android:src="@drawable/icon_pause"
        android:visibility="gone"
        />



</RelativeLayout>