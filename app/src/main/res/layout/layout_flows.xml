<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_flows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/write"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/layout_zp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/shp_taskworkcircle"
                android:padding="3dp"
                android:src="@drawable/ic_tasklc" />

            <TextView
                android:id="@+id/task_message_zp1time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="40dp">

                <View
                    android:id="@+id/task_message_zp1line"
                    android:layout_width="3dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:background="#e6e6e6"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/task_message_zp1person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#999999"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_message_sllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/shp_taskwaitcircle"
                android:padding="3dp"
                android:src="@drawable/ic_tasklc" />

            <TextView
                android:id="@+id/task_message_sltime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="40dp">

                <View
                    android:id="@+id/task_message_slline"
                    android:layout_width="3dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:background="#e6e6e6"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/task_message_slperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#999999"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_message_bjlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/shp_taskfinishcircle"
                android:padding="3dp"
                android:src="@drawable/ic_tasklc" />


            <TextView
                android:id="@+id/task_message_bjtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

<!--            <View-->
<!--                android:layout_width="33dp"-->
<!--                android:layout_height="match_parent" />-->
            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                >
                <View

                    android:id="@+id/task_message_bjline"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#e6e6e6"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:id="@+id/task_message_bjperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="33dp"
                android:layout_marginBottom="2dp"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/task_message_bjline2"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#e6e6e6"
                    android:visibility="visible" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="结论：已知晓"
                android:textColor="#999999"
                android:textSize="15sp" />

        </LinearLayout>

